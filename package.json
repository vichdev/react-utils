{
  "version": "0.0.2",
  "license": "MIT",
  "files": [
    "components/**",
    "utils/**",
    "hooks/**",
    "README.md"
  ],
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "build-components": "babel src --extensions \".ts,.tsx\" --out-dir lib --ignore \"**/*.d.ts\" --copy-files && cp -r lib/components ./components",
    "build-utils": "babel src --extensions \".ts,.tsx\" --out-dir lib --ignore \"**/*.d.ts\" --copy-files && cp -r lib/utils ./utils",
    "build-hooks": "babel src --extensions \".ts,.tsx\" --out-dir lib --ignore \"**/*.d.ts\" --copy-files && cp -r lib/hooks ./hooks",
    "build": "npm run clean && tsc && npm run build-components && npm run build-hooks && npm run build-utils",
    "clean": "rimraf ./lib && rimraf ./components && rimraf ./hooks && rimraf ./utils",
    "major": "npm version major && npm publish",
    "minor": "npm version minor && npm publish",
    "patch": "npm version patch && npm publish"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@vichdev/react-utils",
  "author": "Victor Hugo",
  "devDependencies": {
    "@babel/cli": "^7.24.7",
    "@babel/core": "^7.24.7",
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@babel/runtime": "^7.24.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.4",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "rollup-plugin-postcss": "^4.0.2",
    "ts-node": "^10.9.2"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vichdev/react-utils.git"
  },
  "bugs": {
    "url": "https://github.com/vichdev/react-utils/issues"
  },
  "homepage": "https://github.com/vichdev/react-utils#readme"
}